@model TestProject.Models.ResetPasswordViewModel

<div class="row">
    <div class="col-md-4">

        <form  asp-controller="Account" asp-action="ResetPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Token" type="hidden" />
            <input asp-for="Email" type="hidden" />
            <div class="form-group">
                <label asp-for="Password"> Şifre </label>
                <input asp-for="Password" type="password" class="form-control"/>
                <span asp-validation-for="Password" > </span> 
            </div>
              <div class="form-group">
                <label asp-for="ConfirmPassword"> Şifreyi Onayla </label>
                <input asp-for="ConfirmPassword" type="password" class="form-control"/>
                <span asp-validation-for="ConfirmPassword" > </span> 
            </div>
            <button type="submit" class="btn btn-danger" >Sıfırla</button>
        </form>
    </div>
</div>
