<div>
    <form asp-controller="Account" asp-action="Login">
        <fieldset>
            <div class="form-group row">
                <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" name="username" required placeholder="Email">
                </div>
            </div>
            <div class="form-group row">
                <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                    <input type="password" class="form-control" name="password" required placeholder="Password">
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
                </div>
            </div>
             <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                   <div class="g-recaptcha" data-sitekey="***"></div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <a asp-controller="Account" asp-action="Register">
                        <label class="form-check-label">Kayıt Ol</label>
                    </a>
                </div>
            </div>



            <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
                    <a asp-controller="Account" asp-action="ForgotPassword">
                        <label class="form-check-label">Şifremi Unuttum</label>
                    </a>
                </div>
            </div>

                        <div class="form-group row">
                <div class="col-sm-10 offset-sm-2">
 
                        <label class="form-check-label"><h4 style="color: red;"> @ViewBag.Message </h4></label>

                </div>
            </div>
        </fieldset>
    </form>
</div>
<script src="//www.google.com/recaptcha/api.js"></script>